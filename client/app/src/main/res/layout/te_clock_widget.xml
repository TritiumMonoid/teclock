<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/widget_margin"
              android:background="@drawable/rounded_layout_bg"
              android:orientation="vertical">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
                android:text="Class Name"
                android:id="@+id/txtClassName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/primary_text_light"
                android:shadowColor="@android:color/white"
                android:shadowRadius="10"
                android:layout_weight="1"
                android:layout_gravity="left"
        />
        <TextView
                android:text="Class Series"
                android:id="@+id/txtClassSeries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/tertiary_text_light"
                android:shadowColor="@android:color/white"
                android:layout_gravity="bottom"
        />
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
            <TextView
                    android:text="Teacher Name"
                    android:id="@+id/txtTeacherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/tertiary_text_light"
                    android:shadowColor="@android:color/white"
                    android:shadowRadius="10"
            />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:text="Class Time"
                        android:id="@+id/txtClassTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/tertiary_text_light"
                        android:shadowColor="@android:color/white"
                        android:layout_gravity="left"
                />
                <TextView
                        android:text="Classroom"
                        android:id="@+id/txtClassroom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/tertiary_text_light"
                        android:shadowColor="@android:color/white"
                        android:layout_gravity="left"
                        android:layout_marginLeft="10sp"
                />
            </LinearLayout>
        </LinearLayout>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtEmoji"
                android:textSize="32sp"
                android:text="ðŸ”¥"
                android:textAlignment="textEnd"
                android:layout_gravity="end"
        />
    </LinearLayout>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageButton
                android:layout_width="32sp"
                android:layout_height="32sp"
                android:background="@android:drawable/ic_media_previous"
                android:id="@+id/imageButton1"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        <ImageButton
                android:layout_width="32sp"
                android:layout_height="32sp"
                android:background="@android:drawable/ic_media_next"
                android:id="@+id/imageButton2"/>
    </LinearLayout>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:max="100"
            android:progress="50"/>
</LinearLayout>