<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/widget_margin"
              android:background="@drawable/rounded_layout_bg"
              android:orientation="vertical">
    <TextView
            android:text="Class Name"
            android:id="@+id/txtClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="@android:color/primary_text_light"
            android:shadowColor="@android:color/white"
            android:shadowRadius="10"
    />
    <TextView
            android:text="Teacher Name"
            android:id="@+id/txtTeacherName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/tertiary_text_light"
            android:shadowColor="@android:color/white"
            android:shadowRadius="10"
    />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
                android:text="Classroom"
                android:id="@+id/txtClassroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/tertiary_text_light"
                android:shadowColor="@android:color/white"
                android:layout_gravity="left"
                android:layout_weight="1"
        />
        <TextView
                android:text="Class Series"
                android:id="@+id/txtClassSeries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/tertiary_text_light"
                android:shadowColor="@android:color/white"
                android:layout_gravity="bottom"/>
    </LinearLayout>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar" android:max="60" android:progress="30"/>
    <Button
            android:text="..."
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/rounded_layout_bg"
            android:layout_gravity="right"
            android:translationY="64dp"
            android:id="@+id/button"
    />
</LinearLayout>